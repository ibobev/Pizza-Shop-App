<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.f91268.pizzashop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaShop">
        <activity
            android:name=".CartActivity"
            android:exported="true"
            android:label="@string/cart_label"/>
        <activity
            android:name=".UpdateAccountActivity"
            android:exported="true"
            android:label="@string/update_details_headline"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AccountDetailsActivity"
            android:exported="true"
            android:label="@string/add_account_details"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DisplayItemActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>